<?xml version="1.0" encoding="UTF-8"?>
<Context path="/comparehospitalcharges">
    <!-- the hospital charges database -->
    <Resource name="jdbc/hospital_hospitalcharges" 
              type="javax.sql.DataSource" 
              auth="Container" 
              driverClassName="com.mysql.jdbc.Driver" 
              url="jdbc:mysql://localhost:3306/hospital_hospitalcharges?autoReconnect=true&amp;useInformationSchema=true" 
              username="hospital_hcuser" 
              password="topsecretpassword" 
              testWhileIdle="true"
              testOnBorrow="true"
              testOnReturn="false"
              validationQuery="SELECT 1"
              logAbandoned="true" 
              removeAbandonedOnBorrow="true" 
              removeAbandonedOnMaintenance="true" 
              timeBetweenEvictionRunsMillis="10000"
              removeAbandonedTimeout="60" 
              maxTotal="100"  
              maxIdle="100" 
              minIdle="10" 
              maxWaitMillis="10000" />
    <Resource name="jdbc/hospital_outpatient" type="javax.sql.DataSource" auth="Container" 
              driverClassName="com.mysql.jdbc.Driver" 
              url="jdbc:mysql://localhost:3306/hospital_outpatient?autoReconnect=true&amp;useInformationSchema=true" 
              username="hospital_outuser" password="topsecretpassword" 
              testWhileIdle="true"
              testOnBorrow="true"
              testOnReturn="false"
              validationQuery="SELECT 1"
              logAbandoned="true" 
              removeAbandonedOnBorrow="true" 
              removeAbandonedOnMaintenance="true" 
              timeBetweenEvictionRunsMillis="10000"
              removeAbandonedTimeout="60" 
              maxTotal="100"  
              maxIdle="100" 
              minIdle="10" 
              maxWaitMillis="10000" />
</Context>
